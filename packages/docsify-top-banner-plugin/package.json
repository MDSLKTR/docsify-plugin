{
  "name": "docsify-top-banner-plugin",
  "version": "0.1.0",
  "description": "docsify plugin to add top banner for small anouncments or updates",
  "main": "dist/index.js",
  "scripts": {
    "test": "standard",
    "fixlint": "standard --fix",
    "prebuild": "del-cli dist ",
    "build": "npm run build:css && npm run build:js",
    "build:js": "rollup  --config ../../rollup.config.js",
    "build:css": "stylus  src/style.styl -o src/style.css && npm run optimize:css",
    "optimize:css": "postcss src/style.css -o dist/style.css --config ../../postcss.config.js",
    "postoptimize:css": "del-cli src/style.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "docsify",
    "plugin",
    "banner",
    "docsify-plugin"
  ],
  "author": "anikethsaha <anik220798@gmail.com>",
  "license": "MIT",
  "standard": {
    "ignore": [
      "dist/*"
    ]
  },
  "devDependencies": {
    "cssnano": "^4.1.10",
    "del-cli": "^3.0.0",
    "postcss": "^7.0.26",
    "postcss-cli": "^7.1.0",
    "rollup": "^1.31.1",
    "rollup-plugin-terser": "^5.2.0",
    "standard": "^14.3.1",
    "stylus": "^0.54.7"
  }
}
